<resources xmlns:tools="http://schemas.android.com/tools">

<!-- GLOBAL -->
    <style name="Theme.MML" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_900</item>
        <item name="colorPrimaryVariant">@color/secondary_color_800</item>
        <item name="colorOnPrimary">@color/text_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color_900</item>
        <item name="colorSecondaryVariant">@color/secondary_color_600</item>
        <item name="colorOnSecondary">@color/text_color_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Window background color-->
        <item name="android:windowBackground">@color/primary_color_900</item>
        <!-- Font family-->
        <item name="android:textAppearance">@style/Theme.MML.TextAppearance</item>
        <item name="colorControlHighlight">@color/green_light_color_900</item>
        <item name="android:colorControlHighlight">@color/green_light_color_900</item>
    </style>

    <style name="Theme.MML.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color_900</item>
        <item name="colorPrimaryVariant">@color/secondary_color_800</item>
        <item name="colorOnPrimary">@color/text_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color_900</item>
        <item name="colorSecondaryVariant">@color/secondary_color_600</item>
        <item name="colorOnSecondary">@color/text_color_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Window background color-->
        <item name="android:windowBackground">@color/primary_color_900</item>
        <!-- Font family-->
        <item name="android:textAppearance">@style/Theme.MML.TextAppearance</item>
        <item name="android:textAppearanceButton">@style/Theme.MML.TextAppearance</item>
        <item name="actionMenuTextAppearance">@style/Theme.MML.ToolbarMenuItem</item>
    </style>

    <style name="Theme.MML.ToolbarMenuItem" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.MML.ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/primary_color_800</item>
        <item name="colorOnPrimary">@color/secondary_color_900</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.MML.TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="View.ClickAble" parent="">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <!-- GLOBAL -->

    <!-- BUTTON -->
    <style name="Button.Text.White" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAppearance">@style/Theme.MML.TextAppearance</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/text_color_light</item>
    </style>

    <style name="Button.Text.Secondary" parent="Button.Text.White">
        <item name="android:textColor">@color/secondary_color_800</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Button.Round.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary_color_900</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/Theme.MML.TextAppearance</item>
        <item name="android:textColor">@color/text_color_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">24dp</item>
    </style>
    <!-- BUTTON -->

    <!-- TEXT -->
    <style name="Text.Regular.Small.White" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Regular.Normal.White" parent="Text.Regular.Small.White">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Medium.Medium.White" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Bold.Large.White" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">36sp</item>
    </style>
    <!-- TEXT -->

</resources>